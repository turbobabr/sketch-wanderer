{
  "name": "sketch-wanderer",
  "version": "1.0.1",
  "description": "A small SketchApp extension that introduces 'Finder' like features for working with layer list.",
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "skpm": {
    "name": "Wanderer",
    "manifest": "src/manifest.json",
    "main": "Wanderer.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turbobabr/sketch-wanderer.git"
  },
  "keywords": [
    "sketch",
    "extension",
    "plugin",
    "navigation"
  ],
  "author": "Andrey Shakhmin <andrey.shakhmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turbobabr/sketch-wanderer/issues"
  },
  "homepage": "https://github.com/turbobabr/sketch-wanderer#readme",
  "devDependencies": {
    "@skpm/builder": "^0.4.0"
  },
  "dependencies": {
    "lodash": "^4.17.2"
  }
}
